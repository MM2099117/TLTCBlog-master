@model List<TLTCBlog.Models.BlogArticle>
@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-sm-6"></div>
            <article>
                <header>
                    <h2>
                        @Html.ActionLink(@article.Title, "Details", "Article", new { @id = article.ArticleID }, null)
                    </h2>
                </header>
                <p>
                    @article.Content
                </p>
                <footer>
                    <div class="pull-left">
                        @foreach (var tag in article.Tags)
                        {
                            @Html.ActionLink(tag.Name, "List", "Tag", new { @id = tag.TagID }, new { @class = "btn btn-default btn-xs" })
                        }
                    </div>
                    <small class="author pull-right">
                        --author @article.Creator.FullName
                    </small>
                </footer>

            </article>
        }
    </div>
</div>